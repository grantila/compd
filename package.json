  "keywords": [
    "docker",
    "compose",
    "wrap"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^15.6.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^26.6.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^3.0.2",
    "trace-unhandled": "^2.0.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "already": "^2.1.0",
    "execa": "^5.0.1",
    "js-yaml": "^4.1.0",
