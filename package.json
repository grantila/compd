{
  "name": "compd",
  "description": "Run a command under a docker-compose setup",
  "license": "MIT",
  "version": "0.0.0-development",
  "author": "Gustaf Räntilä <g.rantila@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/grantila/compd"
  },
  "bin": {
    "compd": "./bin/compd"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "bin",
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
